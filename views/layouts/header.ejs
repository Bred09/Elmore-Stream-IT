<div class='header'>
	<a href="/"><div class="logo-box"><img id='logo' src='/media/logo.svg'></div></a>
	
	<div class="find-box">
		<input class="inp-find" placeholder='Введите ваш запрос'>
		<button class="btn-find yellow-btn">
			Find
		</button>
	</div>
	<% if(user.login) { %>
	<div class="signinup">
		<a href='/character/<%= user.login %>' class='user green-lnk' id="login"><%= user.login %></a>
	</div>
	<% } else { %>
	<div class="signinup">
		<a href='/auth/create' class='user green-lnk' id="create">
			Create Account
		</a>
		
		<hr id='hr1'>
		
		<a href='/auth/login' class='user green-lnk' id="login">
				Login
		</a>
	</div>
	<% } %>

	<!-- Adaptiv menu -->
	<div class="container yellow-btn menu-btn" onclick="showMenu(this)">
		<div class="bar1"></div>
		<div class="bar2"></div>
		<div class="bar3"></div>
	</div>

	<div class="menu">
	<% if(user.login) { %>
		<li>
			<a href='/character/<%= user.login %>' class='user green-lnk' id="login"><%= user.login %></a>
		</li>
	<% } else { %>
		<li>
			<a href='/auth/create' class='user green-lnk' id="create">
				Create Account
			</a>
		</li>
		<hr>
		<li>
			<a href='/auth/login' class='user green-lnk' id="login">
					Login
			</a>
		</li>
	<% } %>
	</div>
	<hr id='hr2'>
</div>

<!-- Adaptiv menu START { -->
<script>
function showMenu(x) {
    x.classList.toggle("change");
    let menu = document.querySelector(".menu");
    menu.style.right = menu.style.right == "0px" ? "-200%" : "0px";
}
</script>
<!-- END } -->